{
  "extends": [
    "config:base",
    ":semanticCommits",
    ":semanticCommitTypeAll(chore)",
    ":gitSignOff",
    "group:all",
    "schedule:nonOfficeHours"
  ],
  "timezone": "Europe/Berlin",
  "postUpdateOptions": [
    "gomodTidy",
    "gomodUpdateImportPaths"
  ],
  "dependencyDashboard": false,
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true,
      "automergeStrategy": "squash",
      "automergeType": "pr"
    }
  ],
  "assigneesFromCodeOwners": true,
  "assignAutomerge": true,
}